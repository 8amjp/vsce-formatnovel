{
    "name": "formatnovel",
    "displayName": "Format Novel",
    "description": "小説のルールに基づき文書を整形する、Visual Studio Codeの機能拡張です。",
    "version": "0.1.5",
    "publisher": "8amjp",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "onCommand:extension.formatNovel"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.formatNovel",
                "title": "Format Novel"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == markdown",
                    "command": "extension.formatNovel",
                    "group": "navigation"
                }, {
                    "when": "resourceLangId == plaintext",
                    "command": "extension.formatNovel",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.formatNovel",
                "key": "shift+alt+/",
                "mac": "shift+option+/",
                "when": "editorTextFocus"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/8amjp/vsce-formatnovel.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
